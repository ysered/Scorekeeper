<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScoreButtons" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_score_button</item>
        <item name="android:tint">@drawable/selector_score_button_text</item>
    </style>

    <style name="PlusButtons" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_plus_score</item>
        <item name="android:contentDescription">@string/add_score_description</item>
    </style>

    <style name="MinusButtons" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_minus_score</item>
        <item name="android:contentDescription">@string/minus_score_description</item>
    </style>

    <style name="TeamText">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Display1</item>
    </style>

    <style name="ScoreText">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Display3</item>
    </style>

</resources>
